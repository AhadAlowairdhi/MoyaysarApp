<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="bottom"
    android:layout_margin="16dp"
    android:background="@drawable/moyasarlight"
    tools:context=".activities.SigninActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginVertical="30dp"
        >

        <EditText
            android:id="@+id/edSigninN"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:ems="10"
            android:hint="Name"
            android:background="@color/moyasargray"
            android:inputType="textPersonName"
            tools:ignore="TouchTargetSizeCheck"
            />

        <EditText
            android:id="@+id/edSigninPas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/moyasargray"
            android:ems="10"
            android:hint="Password"
            android:inputType="textPassword"
            tools:ignore="TouchTargetSizeCheck"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginVertical="15dp">

        <Button
            android:id="@+id/signNbtn"
            android:padding="5dp"
            android:layout_margin="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/moyasarnavy"
            android:text="Sign in"/>

        <Button
            android:id="@+id/registrBtn"
            android:padding="5dp"
            android:layout_margin="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/moyasarnavy"
            android:text="Register" />
    </LinearLayout>

</LinearLayout>